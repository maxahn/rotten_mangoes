<h1>Login</h1>
<%=form_tag session_path do%>
  <div class='form-group'>
    <div>
      <%=label_tag :email%><br/>
      <%=text_field_tag :email%>
    </div>
    <div>
      <%=label_tag :password%><br/>
      <%=password_field_tag :password%>
    </div>
    <div>
      <br>
      <%=button_tag(type: 'submit', class: 'btn btn-primary') do%>
          <i class='icon-ok icon-white'></i>
          Log In 
      <%end%>
    </div>
  </div>
<%end%>
