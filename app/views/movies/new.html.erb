<h2>Create a movie post!</h2>
<%=form_for @movie do |f|%>
  <div>
    <%=f.label 'title'%><br>
    <%=f.text_field 'title'%>
  </div>
  <div>
    <%=f.label 'director'%><br>
    <%=f.text_field 'director'%> </div>
  <div>
    <%=f.label 'runtime_in_minutes'%><br>
    <%=f.text_field 'runtime_in_minutes'%>
  </div>
  <div>
    <%=f.label 'description'%><br>
    <%=f.text_area 'description'%>
  </div>
  <div>
    <%=f.label 'poster_image_url'%><br>
    <%=f.text_field 'poster_image_url'%> 
  </div>
  <div>
    <%=f.label 'release_date'%>
    <%=f.label 'release_date'%>
  </div>
  <div>
    <%=f.submit 'Save'%>
  </div>
<%end%>

