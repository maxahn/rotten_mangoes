<% if @user.errors %>
  <div>
    <%@user.errors.full_messages.each do |msg|%>
      <li><%=msg%></li>
    <%end%>
  </div>
<%end%> 
<%=form_for @user do |f|%>
  <div>
    <%=f.label 'firstname'%><br>
    <%=f.text_field 'firstname'%>
  </div>
  <div>
    <%=f.label 'lastname'%><br>
    <%=f.text_field 'lastname'%>
  </div>
  <div>
    <%=f.label 'email'%><br>
    <%=f.text_field 'email'%>
  </div>
  <div>
    <%=f.label 'password'%><br>
    <%=f.password_field 'password'%>
  </div>
  <div>
    <%=f.label 'password_confirmation'%><br>
    <%=f.password_field 'password_confirmation'%>
  </div>
  <div>
    <%=f.submit 'Submit'%>
  </div>
<%end%>
