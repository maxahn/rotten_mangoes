<h1><%=@user.full_name%>
<%if current_user.is_admin?%>
  (<%=link_to 'edit', :method => :edit%>)
  (<%=link_to 'delete', "/admin/users/#{@user.id}", :method => :delete, :'data-confirm' => 'You sure?' %>)
<%end%>
</h1>
<p>Email: <%=@user.email%></p>
<p>Joined at: <%=@user.created_at%></p> 
<hr>
<h2>My Reviews</h2>
<hr>
<%@user.reviews.each do |review|%>
  <h4><%=link_to review.movie.title, movie_path(review.movie)%></h4>
  <p><%=review.text%></p>
  <p><%=review.rating_out_of_ten%>/10</p>
  <hr>
<%end%>
